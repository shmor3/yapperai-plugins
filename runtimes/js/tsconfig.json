{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "outDir": "./dist",
    "moduleResolution": "nodenext"
  },
  "exclude": ["node_modules", "dist"],
}